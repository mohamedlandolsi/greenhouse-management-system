# =============================================================================
# GREENHOUSE MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and customize values for your environment
# Usage: docker-compose --profile dev up -d
# =============================================================================

# -----------------------------------------------------------------------------
# GENERAL SETTINGS
# -----------------------------------------------------------------------------
# Application version tag for Docker images
VERSION=latest

# Spring Boot profile: docker, dev, prod
SPRING_PROFILES_ACTIVE=docker

# Node.js environment: development, production
NODE_ENV=production

# Logging level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# POSTGRESQL - ENVIRONNEMENT DATABASE
# -----------------------------------------------------------------------------
POSTGRES_ENV_USER=postgres
POSTGRES_ENV_PASSWORD=postgres

# -----------------------------------------------------------------------------
# POSTGRESQL - CONTRÃ”LE DATABASE
# -----------------------------------------------------------------------------
POSTGRES_CTRL_USER=postgres
POSTGRES_CTRL_PASSWORD=postgres

# -----------------------------------------------------------------------------
# SPRING BOOT SERVICES
# -----------------------------------------------------------------------------
# Show SQL queries in logs (true/false)
SHOW_SQL=false

# Eureka self-preservation mode (disable for dev, enable for prod)
EUREKA_SELF_PRESERVATION=false

# -----------------------------------------------------------------------------
# CORS SETTINGS
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# -----------------------------------------------------------------------------
# FRONTEND SETTINGS
# -----------------------------------------------------------------------------
# API Gateway URL for client-side requests
NEXT_PUBLIC_API_URL=http://localhost:8080

# SSE endpoint for real-time updates
NEXT_PUBLIC_SSE_URL=http://localhost:8080/api/sse/stream

# Enable SSE real-time updates
ENABLE_SSE=true

# Polling interval in milliseconds (fallback when SSE unavailable)
POLLING_INTERVAL=30000
