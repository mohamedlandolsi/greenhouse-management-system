# Environment Configuration
# Copy this file to .env.local and update values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# API Gateway Endpoints
NEXT_PUBLIC_ENVIRONNEMENT_API=/environnement
NEXT_PUBLIC_CONTROLE_API=/controle

# Real-time Configuration
NEXT_PUBLIC_SSE_URL=http://localhost:8080/api/stream
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8080/ws

# Authentication (JWT-ready)
NEXT_PUBLIC_AUTH_ENABLED=false
NEXT_PUBLIC_AUTH_URL=http://localhost:8080/api/auth

# Refresh Intervals (milliseconds)
NEXT_PUBLIC_REFRESH_INTERVAL=10000
NEXT_PUBLIC_ALERT_REFRESH_INTERVAL=5000

# Feature Flags
NEXT_PUBLIC_ENABLE_SSE=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development
NEXT_PUBLIC_DEBUG_MODE=true
